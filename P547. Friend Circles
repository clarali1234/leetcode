

class Solution:
    def findCircleNum(self, isConnected: List[List[int]]) -> int:
        self.visited = set()
        n = len(isConnected)
        graph = collections.defaultdict(list)
        for i in range(n):
            for j in range(n):
                if isConnected[i][j] == 1:
                    graph[i].append(j)
                    graph[j].append(i)

        res = 0
        for i in range(len(graph)):
            if i not in self.visited:
                self.visited.add(i)
                self.dfs(graph, i)
                res += 1

        return res

    def dfs(self, graph, i):
        for nb in graph[i]:
            if nb not in self.visited:
                self.visited.add(nb)
                self.dfs(graph, nb)



# dfs
#time O(n^2)
# space O(n) visisted array of size n

class Solution(object):
    def findCircleNum(self, M):
        """
        :type M: List[List[int]]
        :rtype: int
        """
        visited = set()
        count = 0
        for i in range(len(M)):
            if i not in visited:
                visited.add(i)
                self.dfs(M, i, visited)
                count += 1
        return count
    
    def dfs(self, M, i, visited):
        for j in range(len(M)):
            if M[i][j] == 1 and j not in visited:
                visited.add(j)
                self.dfs(M, j, visited)
                
                


# bfs
#time O(n^2)
# space O(n) visisted array of size n
class Solution(object):
    def findCircleNum(self, M):
        """
        :type M: List[List[int]]
        :rtype: int
        """
        visited = set()
        queue = collections.deque([])
        
        n = len(M)
        count = 0
        for i in range(n):
            if i not in visited:
                queue.append(i)
                visited.add(i)
                while queue:
                    node = queue.popleft()
                    for j, fri in enumerate(M[node]):
                        if j not in visited and fri == 1:
                            queue.append(j)
                            visited.add(j)
            
                count += 1
        return count
            
