# time O(len(s2))
# space O(len(s1))
class Solution(object):
    def checkInclusion(self, s1, s2):
        """
        :type s1: str
        :type s2: str
        :rtype: bool
        """
        if len(s1) > len(s2):
            return False
        
        m = len(s1)
        c1 = collections.Counter(s1)
        c2 = collections.Counter(s2[:m - 1])
        
        for i in range(m - 1, len(s2)):
            c2[s2[i]] += 1
            if c2 == c1:
                return True
            else:
                c2[s2[i - m + 1]] -= 1
                if c2[s2[i - m + 1]] == 0:
                    del c2[s2[i - m + 1]]
        return False
