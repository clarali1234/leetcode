

class Solution(object):
    def longestSubarray(self, nums):
        
        zero_c = 0
        res = 0
        i = 0
        for j in range(len(nums)):
            if nums[j] == 0:
                zero_c += 1
            
            while zero_c > 1:
                if nums[i] == 0:
                    zero_c -= 1
                i += 1

            res = max(res, j - i)
        return res
