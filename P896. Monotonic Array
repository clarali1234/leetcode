class Solution(object):
    def isMonotonic(self, A):
        """
        :type A: List[int]
        :rtype: bool
        """
        n = len(A)
        
        if A[0] <= A[n - 1]:
            for i in range(0, n - 1):
                if A[i] > A[i + 1]:
                    return False
        else:
            for i in range(0, n - 1):
                if A[i] < A[i + 1]:
                    return False
        return True
