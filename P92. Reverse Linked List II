

# first go to m - 1 node
# convert from m to n


class Solution:
    def reverseBetween(self, head: ListNode, left: int, right: int) -> ListNode:
        if not head or not head.next:
            return head
        
        c = 1
        prev = dummy = ListNode(0)
        dummy.next = head
        
        while c < left:
            prev = prev.next
            c += 1
        
        cur = prev.next
        while c < right:
            nxt = cur.next
            cur.next = nxt.next
            nxt.next = prev.next
            prev.next = nxt
            c += 1
        return dummy.next
            
            
            
            
