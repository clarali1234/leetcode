

class Solution(object):
    def mincostTickets(self, days, costs):

        last_d = days[-1]
        days = set(days)
        f = [0] * (last_d + 1)
        for i in range(1, last_d + 1):
            if i not in days:
                f[i] = f[i - 1]
            else:
                f[i] = min(f[i - 1] + costs[0], f[max(i -  7, 0)] + costs[1], f[max(i - 30, 0)] + costs[2])
        return f[-1]
